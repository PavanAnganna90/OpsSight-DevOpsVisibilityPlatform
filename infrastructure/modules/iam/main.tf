# OpsSight DevOps Platform - IAM Module
# IAM roles and policies for secure access

# EKS Cluster Service Role
resource "aws_iam_role" "eks_cluster_service_role" {
  name = "${var.name_prefix}-eks-cluster-service-role"

  assume_role_policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Action = "sts:AssumeRole"
        Effect = "Allow"
        Principal = {
          Service = "eks.amazonaws.com"
        }
      }
    ]
  })

  tags = merge(var.tags, {
    Name = "${var.name_prefix}-eks-cluster-service-role"
    Type = "iam-role"
  })
}

# Attach required policies to EKS cluster service role
resource "aws_iam_role_policy_attachment" "eks_cluster_policy" {
  policy_arn = "arn:aws:iam::aws:policy/AmazonEKSClusterPolicy"
  role       = aws_iam_role.eks_cluster_service_role.name
}

