output "elasticache_security_group_id" {
  description = "ElastiCache security group ID"
  value       = module.elasticache_security_group.security_group_id
}

# Load Balancer Outputs
output "alb_dns_name" {
  description = "The DNS name of the load balancer"
  value       = module.alb.dns_name
}

output "alb_zone_id" {
  description = "The zone ID of the load balancer"
  value       = module.alb.zone_id
}

output "alb_arn" {
  description = "The ARN of the load balancer"
  value       = module.alb.arn
}

output "alb_target_group_arns" {
  description = "ARNs of the target groups"
  value       = module.alb.target_groups
}

# S3 Outputs
output "s3_application_data_bucket" {
  description = "Name of the S3 bucket for application data"
  value       = aws_s3_bucket.application_data.bucket
}

output "s3_backup_storage_bucket" {
  description = "Name of the S3 bucket for backups"
  value       = aws_s3_bucket.backup_storage.bucket
}

output "s3_application_data_bucket_arn" {
  description = "ARN of the S3 bucket for application data"
  value       = aws_s3_bucket.application_data.arn
}

output "s3_backup_storage_bucket_arn" {
  description = "ARN of the S3 bucket for backups"
  value       = aws_s3_bucket.backup_storage.arn
}

# Route53 Outputs
output "route53_zone_id" {
  description = "Route53 zone ID"
  value       = var.create_route53_zone ? aws_route53_zone.main[0].zone_id : null
}

output "route53_name_servers" {
  description = "Route53 name servers"
  value       = var.create_route53_zone ? aws_route53_zone.main[0].name_servers : null
}

output "application_url" {
  description = "Application URL"
  value       = var.create_route53_zone ? "https://${aws_route53_record.app[0].name}" : "https://${module.alb.dns_name}"
}

# CloudWatch Outputs
output "cloudwatch_log_group_name" {
  description = "Name of the CloudWatch log group"
  value       = aws_cloudwatch_log_group.application.name
}

output "cloudwatch_log_group_arn" {
  description = "ARN of the CloudWatch log group"
  value       = aws_cloudwatch_log_group.application.arn
}

# KMS Outputs
output "kms_key_id" {
  description = "The globally unique identifier for the key"
  value       = aws_kms_key.main.key_id
}

output "kms_key_arn" {
  description = "The Amazon Resource Name (ARN) of the key"
  value       = aws_kms_key.main.arn
}

output "kms_alias_name" {
  description = "The display name of the alias"
  value       = aws_kms_alias.main.name
}

# kubectl Configuration Command
output "kubectl_config_command" {
  description = "Command to update kubectl configuration"
  value       = "aws eks update-kubeconfig --region ${var.aws_region} --name ${module.eks.cluster_name}"
}

# Helm Configuration
output "helm_repository_add_commands" {
  description = "Commands to add required Helm repositories"
  value = [
    "helm repo add stable https://charts.helm.sh/stable",
    "helm repo add bitnami https://charts.bitnami.com/bitnami",
    "helm repo add ingress-nginx https://kubernetes.github.io/ingress-nginx",
    "helm repo add jetstack https://charts.jetstack.io",
    "helm repo add prometheus-community https://prometheus-community.github.io/helm-charts",
    "helm repo update"
  ]
}

# Environment-specific connection strings (for application configuration)
output "database_connection_string" {
  description = "Database connection string for application configuration"
  value       = "postgresql://${var.database_username}@${module.rds.db_instance_endpoint}:${module.rds.db_instance_port}/${var.database_name}"
  sensitive   = true
}

# output "redis_connection_string" {
#   description = "Redis connection string for application configuration"
#   value       = "redis://${module.elasticache.primary_endpoint_address}:${module.elasticache.cache_port}"
#   sensitive   = true
# }

# Security Group IDs for reference
output "security_group_ids" {
  description = "Map of security group IDs"
  value = {
    alb             = module.alb_security_group.security_group_id
    rds             = module.rds_security_group.security_group_id
    elasticache     = module.elasticache_security_group.security_group_id
    eks_cluster     = module.eks.cluster_security_group_id
    eks_node_groups = module.eks.cluster_primary_security_group_id
  }
}

# IAM Role ARNs for reference
output "iam_role_arns" {
  description = "Map of IAM role ARNs"
  value = {
    eks_cluster    = module.eks.cluster_iam_role_arn
    eks_node_group = module.eks.eks_managed_node_groups["general"].iam_role_arn
    eks_admin      = module.eks_admins_iam_role.iam_role_arn
  }
}

# Tags applied to resources
output "applied_tags" {
  description = "Tags applied to all resources"
  value       = local.common_tags
}

# Region and availability zones
output "aws_region" {
  description = "AWS region"
  value       = var.aws_region
}

output "availability_zones" {
  description = "List of availability zones"
  value       = data.aws_availability_zones.available.names
}