# OpsSight DevOps Platform - Terraform Variables Example
# Copy this file to terraform.tfvars and customize for your environment

# Project Configuration
project_name = "opsight"
environment  = "dev"  # Options: dev, staging, prod

# AWS Configuration
aws_region = "us-west-2"

# Network Configuration
vpc_cidr                 = "10.0.0.0/16"
public_subnet_cidrs      = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
private_subnet_cidrs     = ["10.0.11.0/24", "10.0.12.0/24", "10.0.13.0/24"]
database_subnet_cidrs    = ["10.0.21.0/24", "10.0.22.0/24", "10.0.23.0/24"]

# Security Configuration
allowed_cidr_blocks = ["0.0.0.0/0"]  # IMPORTANT: Restrict this in production!
enable_vpc_flow_logs = true

# EKS Configuration
kubernetes_version        = "1.28"
node_group_instance_types = ["t3.medium", "t3.large"]
node_group_scaling_config = {
  desired_size = 2
  max_size     = 5
  min_size     = 1
}
eks_endpoint_public_access = true  # Set to false for production security

# Database Configuration
db_instance_class         = "db.t3.micro"  # Use larger instances for production
db_allocated_storage      = 20
db_max_allocated_storage  = 100

# Application Configuration
enable_monitoring = true
enable_logging    = true

# Backup Configuration
backup_retention_days = 7

# Cost Optimization
enable_spot_instances = false  # Set to true for non-production to save costs

# Additional Tags
additional_tags = {
  Owner       = "devops-team"
  CostCenter  = "engineering"
  Backup      = "daily"
} 